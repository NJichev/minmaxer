{
  "manifest_version": 3,
  "name": "MinMaxer - Soft Reserve Optimizer",
  "version": "0.1.0",
  "description": "Optimize your soft reserves by showing competition for BiS items on softres.it",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://softres.it/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://softres.it/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "MinMaxer - BiS Manager"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 